        <PasswordBox x:Name="Hużytkownika" Grid.Column="5" HorizontalAlignment="Left" Margin="123.2,297,0,0" VerticalAlignment="Top" Height="50
                     " Width="190" Grid.ColumnSpan="3" FontSize="20"/>
