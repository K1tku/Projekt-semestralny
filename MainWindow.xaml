        mc:Ignorable="d"
        Title="Logowanie" Height="572.8" Width="758.4">
    <Window.Background>
        <ImageBrush ImageSource="8554.jpg"/>
    </Window.Background>



    <Grid x:Name="Logowanie" Margin="0,10,4,6.6">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="0*"/>
