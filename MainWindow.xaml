            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="294*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="286*"/>
            <ColumnDefinition Width="62*"/>

        </Grid.ColumnDefinitions>
        <Label Content="Nazwa użytkownika" Grid.Column="4" HorizontalAlignment="Left" Margin="0.4,247,0,0" VerticalAlignment="Top" Height="45" Width="197" FontSize="20" Grid.ColumnSpan="2" FontWeight="Bold"/>
        <Label Content="Hasło użytkownika&#xD;&#xA;" Grid.Column="4" HorizontalAlignment="Left" Margin="0.4,297,0,0" VerticalAlignment="Top" Height="50" Width="197" FontSize="20" Grid.ColumnSpan="2" Background="#00000000" FontWeight="Bold"/>
